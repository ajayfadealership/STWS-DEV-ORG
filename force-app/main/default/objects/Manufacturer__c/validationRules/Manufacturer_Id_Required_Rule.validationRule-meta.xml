<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Manufacturer_Id_Required_Rule</fullName>
    <active>true</active>
    <description>Manufacturer Id must be specified.</description>
    <errorConditionFormula>AND(
 RecordType.Name ==&#39;Boat Manufacturer&#39;,
ISBLANK( Manufacturer_name__c ) 
)</errorConditionFormula>
    <errorDisplayField>Manufacturer_name__c</errorDisplayField>
    <errorMessage>Manufacturer Id must be specified.</errorMessage>
</ValidationRule>
