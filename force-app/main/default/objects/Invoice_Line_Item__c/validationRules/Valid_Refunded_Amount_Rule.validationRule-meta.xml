<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Valid_Refunded_Amount_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>IF(Refunded_Amount__c &gt;  Related_To_Invoice__r.Total_Amount_on_Invoice__c ,true,false)</errorConditionFormula>
    <errorDisplayField>Refunded_Amount__c</errorDisplayField>
    <errorMessage>Refunded Amount of Line Item cannot exceed the Total Amount on Invoice.</errorMessage>
</ValidationRule>
